@import 'nib'

body
  padding 60px 0 0
  background url(../img/furley_bg.png) center

h1
  font-weight 500

.lead
  font-size 17px
  strong
    font-weight bold
  a
    color #333
    text-decoration underline

footer
  margin-top 20px
  padding 10px
  text-align center
  background #F5F5F5
  border-top 1px solid #D5D5D5
  p
    display inline-block
    margin 0 20px
    vertical-align top

section
  padding 50px 0
  &#basics
    padding-top 20px

hr
  border-color #E5E5E5

.right
  text-align right

.span6
  position relative

.semperLabel, .dataLabel, .htmlLabel
  transition opacity 0.4s ease-in 1.5s
  opacity 0
  position absolute
  background-repeat no-repeat
  height 30px

.row.annotate
  .semperLabel, .dataLabel, .htmlLabel
    opacity 1

.semperLabel
  transition-delay 1.4s
  right 10%
  top -30px
  background-image url(../img/semper.png)
  width 132px

.dataLabel
  transition-delay 1.5s
  right 9%
  bottom -32px
  background-image url(../img/data.png)
  width 130px

.htmlLabel
  transition-delay 1.6s
  left 9%
  top -33px
  background-image url(../img/html.png)
  width 146px

textarea
  text-align left
  width 91%
  display inline-block
  padding 8.5px
  margin 0 0 6px
  font-size 15px
  $lineHeight = 24px
  line-height $lineHeight
  word-break break-all
  word-wrap break-word
  white-space pre
  white-space pre-wrap
  background-color #f5f5f5
  border 1px solid rgba(0, 0, 0, 0.15)
  border-radius 4px
  font-family 'Droid Sans Mono', sans-serif
  color #333333
  &.html
    cursor default
  &.error
    color #f00
  &.size1
    height $lineHeight
  &.size2
    height $lineHeight * 2
  &.size3
    height $lineHeight * 3
  &.size4
    height $lineHeight * 4
  &.size5
    height $lineHeight * 5
  &.size6
    height $lineHeight * 6
  &.size7
    height $lineHeight * 7
  &.size8
    height $lineHeight * 8
  &.size9
    height $lineHeight * 9


.page-header
  margin-bottom 0
  border none


